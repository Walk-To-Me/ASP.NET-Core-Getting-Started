<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark">
        <a class="navbar-brand" asp-controller="home" asp-action="index">
            <img src="~/images/logo.png" width="30" height="30" alt="Alternate Text" />
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="home" asp-action="index">列表</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="home" asp-action="create">创建</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="home" asp-action="search">查询</a>
                </li>
            </ul>
        </div>

    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
